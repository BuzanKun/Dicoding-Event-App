<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.dicodingeventapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_finished"
        android:name="com.dicoding.dicodingeventapp.ui.home.FinishedFragment"
        android:label="Finished Event"
        tools:layout="@layout/fragment_finished" />

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.dicoding.dicodingeventapp.ui.home.UpcomingFragment"
        android:label="Upcoming Event"
        tools:layout="@layout/fragment_upcoming" />

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dicoding.dicodingeventapp.ui.home.FavoriteFragment"
        android:label="Favorite Event"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dicoding.dicodingeventapp.ui.settings.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>